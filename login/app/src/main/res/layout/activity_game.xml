        tools:text="S" />

    <TextView
        android:id="@+id/tvWordE1"
        style="@style/wordStyle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/tvWordE2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvWordD1"
        app:layout_constraintBottom_toTopOf="@+id/tvWord"
        tools:text="W" />

    <TextView
        android:id="@+id/tvWordE2"
        style="@style/wordStyle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvWordE1"
        app:layout_constraintEnd_toStartOf="@+id/tvWordE3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvWordE1"
        app:layout_constraintTop_toTopOf="@+id/tvWordE1"
        tools:text="O" />

    <TextView
        android:id="@+id/tvWordE3"
        style="@style/wordStyle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvWordE1"
        app:layout_constraintEnd_toStartOf="@+id/tvWordE4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvWordE2"
        app:layout_constraintTop_toTopOf="@+id/tvWordE1"
        tools:text="R" />

