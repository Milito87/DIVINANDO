        app:layout_constraintBottom_toBottomOf="@+id/iLogoGame"
        app:layout_constraintEnd_toEndOf="@+id/tvWordA5"
        app:layout_constraintStart_toEndOf="@+id/iLogoGame"
        app:layout_constraintTop_toTopOf="@+id/iLogoGame" />

    <ImageView
