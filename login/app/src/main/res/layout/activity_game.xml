        tools:text="W" />

    <TextView
        android:id="@+id/tvWordD2"
        style="@style/wordStyle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvWordD1"
        app:layout_constraintEnd_toStartOf="@+id/tvWordD3"
        app:layout_constraintHorizontal_bias="0.5"
