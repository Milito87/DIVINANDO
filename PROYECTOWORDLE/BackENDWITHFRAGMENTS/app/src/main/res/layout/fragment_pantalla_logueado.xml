<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context=".PantallaLogueado">

    <Button
        android:id="@+id/bt_logout"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:text="Desloguear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btForgotPass" />

    <Button
        android:id="@+id/bt_football_quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Football Quiz"
        app:layout_constraintBottom_toTopOf="@+id/bt_world_quiz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_wordle" />

    <Button
        android:id="@+id/bt_world_quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="World Quiz"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_football_quiz" />

    <Button
        android:id="@+id/bt_wordle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wordle"
        app:layout_constraintBottom_toTopOf="@+id/bt_football_quiz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_logout" />
</androidx.constraintlayout.widget.ConstraintLayout>