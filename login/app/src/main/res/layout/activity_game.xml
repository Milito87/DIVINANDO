        android:id="@+id/tvWordE4"
        style="@style/wordStyle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvWordE1"
        app:layout_constraintEnd_toStartOf="@+id/tvWordE5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvWordE3"
        app:layout_constraintTop_toTopOf="@+id/tvWordE1"
        tools:text="D" />

