<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChainActivity">

    <TextView
        android:id="@+id/tvScore"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/trade_winds"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvChainA1"
        app:layout_constraintEnd_toEndOf="@+id/tvChainA5"
        app:layout_constraintStart_toStartOf="@+id/tvChainA1"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Round 1    0 Points" />

    <TextView
        android:id="@+id/tvChainA1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@color/black"
        android:fontFamily="@font/trade_winds"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvChainB1"
        app:layout_constraintEnd_toStartOf="@+id/tvChainA2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvScore"
        tools:text="A" />

    <TextView
        android:id="@+id/tvChainA2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@color/black"
        android:fontFamily="@font/trade_winds"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvChainA1"
        app:layout_constraintEnd_toStartOf="@+id/tvChainA3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvChainA1"
        app:layout_constraintTop_toTopOf="@+id/tvChainA1"
        tools:text="A" />

    <TextView
        android:id="@+id/tvChainA3"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@color/black"
        android:fontFamily="@font/trade_winds"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvChainA1"
        app:layout_constraintEnd_toStartOf="@+id/tvChainA4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvChainA2"
        app:layout_constraintTop_toTopOf="@+id/tvChainA1"
        tools:text="A" />

    <TextView
        android:id="@+id/tvChainA4"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@color/black"
        android:fontFamily="@font/trade_winds"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvChainA1"
        app:layout_constraintEnd_toStartOf="@+id/tvChainA5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvChainA3"
        app:layout_constraintTop_toTopOf="@+id/tvChainA1"
        tools:text="A" />

    <TextView
        android:id="@+id/tvChainA5"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@color/black"
        android:fontFamily="@font/trade_winds"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvChainA1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvChainA4"
        app:layout_constraintTop_toTopOf="@+id/tvChainA1"
        tools:text="A" />

    <TextView
        android:id="@+id/tvChainB1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@color/black"
        android:fontFamily="@font/trade_winds"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvWordChain"
        app:layout_constraintEnd_toStartOf="@+id/tvChainB2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvChainA1"
        tools:text="A" />

    <TextView
        android:id="@+id/tvChainB2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@color/black"
        android:fontFamily="@font/trade_winds"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvChainB1"
        app:layout_constraintEnd_toStartOf="@+id/tvChainB3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvChainB1"
        app:layout_constraintTop_toTopOf="@+id/tvChainB1"
        tools:text="A" />

    <TextView
        android:id="@+id/tvChainB3"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@color/black"
        android:fontFamily="@font/trade_winds"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvChainB1"
        app:layout_constraintEnd_toStartOf="@+id/tvChainB4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvChainB2"
        app:layout_constraintTop_toTopOf="@+id/tvChainB1"
        tools:text="A" />

    <TextView
        android:id="@+id/tvChainB4"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@color/black"
        android:fontFamily="@font/trade_winds"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvChainB1"
        app:layout_constraintEnd_toStartOf="@+id/tvChainB5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvChainB3"
        app:layout_constraintTop_toTopOf="@+id/tvChainB1"
        tools:text="A" />

    <TextView
        android:id="@+id/tvChainB5"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@color/black"
        android:fontFamily="@font/trade_winds"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvChainB1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvChainB4"
        app:layout_constraintTop_toTopOf="@+id/tvChainB1"
        tools:text="A" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tvWordChain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btNextChain"
        app:layout_constraintStart_toStartOf="@+id/tvChainA1"
        app:layout_constraintTop_toBottomOf="@+id/tvChainB1">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etWordChain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="SpeakableTextPresentCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btNextChain"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/next"
        app:layout_constraintBottom_toBottomOf="@+id/tvWordChain"
        app:layout_constraintEnd_toEndOf="@+id/tvChainA5"
        app:layout_constraintStart_toEndOf="@+id/tvWordChain"
        app:layout_constraintTop_toTopOf="@+id/tvWordChain" />
</androidx.constraintlayout.widget.ConstraintLayout>