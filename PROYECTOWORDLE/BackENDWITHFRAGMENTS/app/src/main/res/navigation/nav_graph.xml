<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    android:label="Login"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.ieszv.progmulti.backendwithfragments.FirstFragment"
        android:label="Login"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_pantallaLogueado"
            app:destination="@id/pantallaLogueado" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.ieszv.progmulti.backendwithfragments.SecondFragment"
        android:label="Register"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
    <fragment
        android:id="@+id/pantallaLogueado"
        android:name="com.ieszv.progmulti.backendwithfragments.PantallaLogueado"
        android:label="fragment_pantalla_logueado"
        tools:layout="@layout/fragment_pantalla_logueado" />
</navigation>