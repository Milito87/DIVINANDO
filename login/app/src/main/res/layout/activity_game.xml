        android:id="@+id/tvWordE5"
        style="@style/wordStyle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvWordE1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvWordE4"
        app:layout_constraintTop_toTopOf="@+id/tvWordE1"
        tools:text="S" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tvWord"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColorHint="#00000000"
        app:boxBackgroundColor="#99FFFFFF"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="16dp"
        app:boxCornerRadiusBottomStart="16dp"
        app:boxCornerRadiusTopEnd="16dp"
        app:boxCornerRadiusTopStart="16dp"
        app:boxStrokeColor="#4CAF50"
        app:boxStrokeWidth="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btSend"
        app:layout_constraintStart_toEndOf="@+id/btBackGame"
        app:layout_constraintTop_toBottomOf="@+id/tvWordE1">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etWord"
            style="@style/etField"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:ignore="TextContrastCheck,TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btSend"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:fontFamily="@font/trade_winds"
        android:text="SEND"
        android:textSize="16sp"
        app:backgroundTint="#4CAF50"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvWord"
        app:layout_constraintEnd_toEndOf="@+id/tvWordA5"
        app:layout_constraintStart_toEndOf="@+id/tvWord"
        app:layout_constraintTop_toTopOf="@+id/tvWord"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/btBackGame"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:fontFamily="@font/trade_winds"
        android:foreground="?attr/actionModeCloseDrawable"
        android:textSize="16sp"
        app:backgroundTint="#3F51B5"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/btSend"
        app:layout_constraintEnd_toStartOf="@+id/tvWord"
        app:layout_constraintStart_toStartOf="@+id/tvWordA1"
        app:layout_constraintTop_toTopOf="@+id/btSend"
        tools:ignore="SpeakableTextPresentCheck" />

