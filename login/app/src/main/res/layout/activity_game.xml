        tools:text="O" />

    <TextView
        android:id="@+id/tvWordC3"
        style="@style/wordStyle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvWordC1"
        app:layout_constraintEnd_toStartOf="@+id/tvWordC4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvWordC2"
        app:layout_constraintTop_toTopOf="@+id/tvWordC1"
        tools:text="R" />

    <TextView
        android:id="@+id/tvWordC4"
        style="@style/wordStyle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvWordC1"
        app:layout_constraintEnd_toStartOf="@+id/tvWordC5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvWordC3"
        app:layout_constraintTop_toTopOf="@+id/tvWordC1"
        tools:text="D" />

    <TextView
        android:id="@+id/tvWordC5"
        style="@style/wordStyle"
        android:layout_width="48dp"
