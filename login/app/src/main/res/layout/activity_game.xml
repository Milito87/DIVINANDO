        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iLogoGame"
        app:layout_constraintBottom_toTopOf="@+id/tvWordB1"
        tools:text="W" />

    <TextView
